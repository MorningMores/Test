{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "cypress run --browser electron",
    "test:e2e:headless": "cypress run --browser electron --headless",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:coverage": "cypress run --browser electron --env coverage=true",
    "test:all": "npm run test:coverage && npm run test:e2e:headless",
    "test:ci": "npm run test:coverage && npm run test:e2e:headless"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "axios": "^1.12.1",
    "nuxt": "^4.0.3",
    "tailwindcss": "^4.1.12",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@vue/test-utils": "^2.4.6",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "cypress": "^13.17.0",
    "@cypress/code-coverage": "^3.13.4",
    "happy-dom": "^15.11.9",
    "jsdom": "^25.0.1",
    "vitest": "^2.1.9"
  }
}
